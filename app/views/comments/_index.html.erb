<div>
  <% @comments.sort_by(&:created_at).each do |comment| %>
    <p>
      <%= comment.content %>
      <strong><%= comment.user.first_name + " " + comment.user.last_name %></strong>
      <% if current_user.id == comment.user_id%>
        <%= link_to "Edit", edit_gossip_comment_path(@gossip.id, comment.id), class:"btn btn-outline-success" %>
        <%= link_to "Delete", gossip_comment_path(@gossip.id, comment.id), class:"btn btn-outline-danger", data:{confirm:"Sure you wanan delete ?", method:"DELETE"} %>
      <% end %>
    </p>
  <% end %>
</div>
