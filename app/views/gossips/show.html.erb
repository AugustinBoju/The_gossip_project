<% if params[:action] == "update" %>
  <div class="container alert alert-success d-flex justify-content-center alert-dismissible fade show" role="alert">Succesfully edited !
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

<h1>Here is the <%= @gossip.user.first_name %> <%= @gossip.user.last_name %>'s' gossip</h1>


<main class="container">
<div style="margin-bottom: 20px;">
  <%= link_to "Edit", edit_gossip_path(@gossip.id), class:"btn btn-outline-success" %>
  <%= link_to "Delete", gossip_path(@gossip.id), class:"btn btn-outline-danger", data:{confirm:"Sure you wanna delete ?", method:"DELETE"} %>
</div>
<div class="card">
  <div class="card-header">
    <%= @gossip.title %>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= @gossip.content %></p>
      <footer class="blockquote-footer"><%= link_to "#{@gossip.user.first_name} #{@gossip.user.last_name}", user_path(@gossip.user.id) %> at <%= link_to "#{@gossip.user.city.name}", city_path(@gossip.user.city.id) %></footer>
    </blockquote>
  </div>
</div>
<div style="margin-top: 20px;"><%= link_to "Back home", root_path, :class => "btn btn-info" %></div>
<hr>

<h2>Tags</h2>
<% @tags.each do |tag| %>
  <%=tag%>
<% end %>

<h2>Comments</h2>

<div>
  <%= render 'comments/index'%>
  <%= render 'comments/new'%>
</div>
</main>
